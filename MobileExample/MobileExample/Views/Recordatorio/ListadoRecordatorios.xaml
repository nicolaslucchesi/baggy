<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileExample.Views.ListadoRecordatorios"
              Title="{Binding Title}"
             x:Name="BrowseItemsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nuevo Recordatorio" Clicked="AgregarRecordatorio_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="add.png"/>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ItemsListView2" 
                ItemsSource="{Binding Recordatorios}"
                VerticalOptions="FillAndExpand"
                 HasUnevenRows="true"
                 RefreshCommand="{Binding ComandoCargarRecordatorios}"
                 IsPullToRefreshEnabled="true"
                 IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                 CachingStrategy="RecycleElement"
                 ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                                <StackLayout Padding="10" Orientation="Vertical">
                                    <StackLayout Orientation="Horizontal" >
                                    <Label  Text="{Binding Hora}" 
                                        LineBreakMode="NoWrap" 
                                        Style="{DynamicResource ListItemTextStyle}" 
                                        FontSize="48" />
                                        <Label Text=":" Style="{DynamicResource ListItemTextStyle}" 
                                        FontSize="48"></Label>
                                    <Label  Text="{Binding Minuto}" 
                                        LineBreakMode="NoWrap"
                                        Style="{DynamicResource ListItemDetailTextStyle}"
                                        FontSize="48" />
                                    </StackLayout>
                                    <StackLayout Padding="10" Orientation="Horizontal">
                                        <Label Text="Lunes" TextColor="Red" IsVisible="{Binding Lunes}"></Label>
                                        <Label Text="Martes" TextColor="Red" IsVisible="{Binding Martes}"></Label>
                                        <Label Text="Miercoles" TextColor="Red" IsVisible="{Binding Miercoles}"></Label>
                                        <Label Text="Jueves" TextColor="Red" IsVisible="{Binding Jueves}"></Label>
                                        <Label Text="Viernes" TextColor="Red" IsVisible="{Binding Viernes}"></Label>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout>
                                <Button HorizontalOptions="End" Image="trash.png" WidthRequest="45" HeightRequest="45" Command="{Binding ComandoEliminarRecordatorio}">
                                </Button>
                                </StackLayout>
                            </StackLayout>
                            
                            
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>