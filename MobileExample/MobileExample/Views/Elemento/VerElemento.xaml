<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileExample.Views.VerElemento"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15" >
        <Image Source="{Binding Item.RutaIcono}"/>
        <Label Text="Imprescindible" FontSize="Medium" />
        <Switch IsToggled ="{Binding Item.Imprescindible}"></Switch>
        <Label Text="Vinculado" FontSize="Medium" />
        <Switch IsToggled ="{Binding Item.Vinculado}"></Switch>
        <Label Text="Descripción" FontSize="Medium" />
        <Entry Text="{Binding Item.Descripcion}" FontSize="Small" Placeholder="Descripción" />
    </StackLayout>
</ContentPage>

